{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "rootDirs": ["src"],
    "typeRoots": ["./node_modules/@types", "./src/assets"],
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@cart/*": ["./src/modules/cart/*"],
      "@common/*": ["./src/modules/common/*"],
      "@products/*": ["./src/modules/products/*"]
    }
  }
}
